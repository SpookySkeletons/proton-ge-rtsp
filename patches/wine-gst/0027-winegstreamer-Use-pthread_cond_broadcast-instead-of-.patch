From b4ccfd440946dbade6e7626c4f17e0e0169ef90d Mon Sep 17 00:00:00 2001
From: Torge Matthies <openglfreak@googlemail.com>
Date: Mon, 18 Mar 2024 10:18:07 +0100
Subject: [PATCH 27/39] winegstreamer: Use pthread_cond_broadcast instead of
 pthread_cond_signal for stream_event_cond.

---
 dlls/winegstreamer/wg_parser.c | 12 ++++++------
 1 file changed, 6 insertions(+), 6 deletions(-)

diff --git a/dlls/winegstreamer/wg_parser.c b/dlls/winegstreamer/wg_parser.c
index ae6bfc91ed5..35cd4add251 100644
--- a/dlls/winegstreamer/wg_parser.c
+++ b/dlls/winegstreamer/wg_parser.c
@@ -317,7 +317,7 @@ static NTSTATUS wg_parser_stream_disable(void *args)
     stream->current_format.major_type = WG_MAJOR_TYPE_UNKNOWN;
     stream->next_format.major_type = WG_MAJOR_TYPE_UNKNOWN;
     pthread_mutex_unlock(&parser->mutex);
-    pthread_cond_signal(&parser->stream_event_cond);
+    pthread_cond_broadcast(&parser->stream_event_cond);
     return S_OK;
 }
 
@@ -356,7 +356,7 @@ static void release_buffer(struct wg_parser *parser, struct wg_parser_stream *st
         stream->buffer = buffer;
     }
 
-    pthread_cond_signal(&parser->stream_event_cond);
+    pthread_cond_broadcast(&parser->stream_event_cond);
 }
 
 static NTSTATUS wg_parser_stream_get_buffer(void *args)
@@ -765,7 +765,7 @@ static gboolean sink_event_cb(GstPad *pad, GstObject *parent, GstEvent *event)
             pthread_mutex_lock(&parser->mutex);
             stream->eos = true;
             if (stream->enabled)
-                pthread_cond_signal(&parser->stream_event_cond);
+                pthread_cond_broadcast(&parser->stream_event_cond);
             else
                 pthread_cond_signal(&parser->init_cond);
             pthread_mutex_unlock(&parser->mutex);
@@ -777,7 +777,7 @@ static gboolean sink_event_cb(GstPad *pad, GstObject *parent, GstEvent *event)
             if (stream->enabled)
             {
                 stream->flushing = true;
-                pthread_cond_signal(&parser->stream_event_cond);
+                pthread_cond_broadcast(&parser->stream_event_cond);
 
                 if (stream->buffer)
                 {
@@ -980,7 +980,7 @@ static GstFlowReturn sink_chain_cb(GstPad *pad, GstObject *parent, GstBuffer *bu
     }
 
     pthread_mutex_unlock(&parser->mutex);
-    pthread_cond_signal(&parser->stream_event_cond);
+    pthread_cond_broadcast(&parser->stream_event_cond);
 
     /* The chain callback is given a reference to the buffer. Transfer that
      * reference to the stream object, which will release it in
@@ -2315,7 +2315,7 @@ static NTSTATUS wg_parser_disconnect(void *args)
     pthread_mutex_lock(&parser->mutex);
     for (i = 0; i < parser->stream_count; ++i)
         parser->streams[i]->flushing = true;
-    pthread_cond_signal(&parser->stream_event_cond);
+    pthread_cond_broadcast(&parser->stream_event_cond);
     pthread_mutex_unlock(&parser->mutex);
 
     gst_element_set_state(parser->container, GST_STATE_NULL);
